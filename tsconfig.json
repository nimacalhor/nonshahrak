{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["*"],
      "@t/*": ["types/*"],
      "@lib/*": ["lib/*"],
      "@constants/*": ["lib/constants/*"],
      "@helper/*": ["lib/helper/*"],
      "@model/*": ["model/*"],
      "@controller/*": ["controller/*"],
      "@mw/*": ["middleware/*"],
      "@view/*": ["view/*"]
    },
    "types": ["node"],
    "sourceMap": false,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "TS_NODE_DEBUG": true
  }
}
